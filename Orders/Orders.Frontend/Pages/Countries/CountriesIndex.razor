@page "/countries"


@* @inject IRepository repository *@
<h3>Paises</h3>
<div class="mb-3">
    <a class="btn btn-primary " href="/countries/create">nuevo</a>
</div>

<GenericList MyList="Countries">
    <Body>
        <table class="table table-striped">
            <thead>

                <tr>
                    <th>Paises</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var country in Countries!)
                {
                    <tr>
                        <td>@country.Name</td>
                        <td>
                            <a class="btn btn-warning">Editar</a>
                            <button class="btn btn-danger">Borrar</button>
                        </td>
                    </tr>
                }

            </tbody>

        </table>
    </Body>
</GenericList>
@if (Countries == null)
{
    <p>Cargando..</p>
}
else
{
   
}

